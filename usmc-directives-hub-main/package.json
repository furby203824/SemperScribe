{
  "name": "message-watch",
  "version": "2.0.0",
  "description": "Message Watch - Monitor military directives, messages, and publications",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "fetch-fa": "node scripts/fetch-fa-checklists.mjs",
    "fetch-secnav": "node scripts/fetch-secnav.mjs",
    "fetch-alnav": "node scripts/fetch-alnav.mjs",
    "fetch-youtube": "node scripts/fetch-youtube.mjs",
    "generate-secnav": "node scripts/generate-secnav-data.mjs",
    "generate-alnav": "node scripts/generate-alnav-data.mjs",
    "generate-static": "npm run generate-secnav && npm run generate-alnav",
    "fetch-static": "npm run fetch-fa && npm run generate-secnav && npm run generate-alnav",
    "fetch-all": "npm run fetch-static && npm run fetch-youtube",
    "update-data": "npm run generate-static && npm run fetch-youtube",
    "lint": "eslint app.js --fix",
    "format": "prettier --write \"*.{js,html,css,md}\"",
    "format:check": "prettier --check \"*.{js,html,css,md}\""
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "terser": "^5.44.1",
    "vite": "^5.0.0",
    "vite-plugin-static-copy": "^3.1.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SemperAdmin/usmc-directives-hub.git"
  },
  "author": "Semper Admin",
  "license": "MIT"
}
